import argparse
import ipaddress

# Function to extract IP addresses from CIDR ranges
def extract_ips_from_cidr_file(file_path):
    ip_list = []
    try:
        with open(file_path, 'r') as file:
            for line in file:
                cidr = line.strip()
                # Parse the CIDR notation
                network = ipaddress.IPv4Network(cidr, strict=False)
                
                # Iterate over the IP addresses in the range
                for ip in network:
                    ip_list.append(str(ip))
    except FileNotFoundError:
        print(f"File not found: {file_path}")
    
    return ip_list

# Parse command line arguments
parser = argparse.ArgumentParser(description="Extract IP addresses from CIDR ranges in a file")
parser.add_argument("-f", "--file", required=True, help="Path to the file containing CIDR ranges")

args = parser.parse_args()

# Extract IP addresses from the specified file
ip_addresses = extract_ips_from_cidr_file(args.file)

# Print the list of IP addresses
for ip in ip_addresses:
    print(ip)
